#!/usr/bin/env bash
# print out subdomain info

func1 () {
    subs="${2:-www lb-01 web-01 web-02}"
    for bus in $subs; do
        dig "$bus.$1" | awk '!/;/ && /[[:blank:]]/ { print "The subdomain", bus, "is a", $4, "record and points to", $5 }' 
    done
}

# Main script
if [ "$#" -eq 1 ]; then
    func1 "$1"
else
    func1 "$1" "$2"
fi
